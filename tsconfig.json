{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitUseStrict": true,
        "outDir": "dist",
        "noEmit": false,
        "skipLibCheck": true,
        "baseUrl": "./",
        "types": [
            "node"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "include": [
        "./*.ts",
        "./*",
        "*",
        "./"
    ],
    "exclude": [
        "node_modules"
    ]
}